<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


  <androidx.cardview.widget.CardView
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:orientation="horizontal">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">

        <ImageView
            android:id="@+id/rTeamALogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:srcCompat="@mipmap/ic_launcher"
            tools:textAlignment="center" />

        <TextView
            android:id="@+id/rTeamAName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Kilkenny"
            android:textAlignment="center" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">

        <TextView
            android:id="@+id/rSportType"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Hurling"
            android:textAlignment="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

          <TextView
              android:id="@+id/rTeamAScore"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:padding="10dp"
              android:text="2-24"
              android:textAlignment="center"
              android:textSize="20sp" />

          <TextView
              android:id="@+id/rTeamBScore"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_weight="1"
              android:padding="10dp"
              android:text="1-10"
              android:textAlignment="center"
              android:textSize="20sp" />
        </LinearLayout>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:orientation="vertical">

        <ImageView
            android:id="@+id/rTeamBLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textAlignment="center"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/rTeamBName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Cork"
            android:textAlignment="center" />

      </LinearLayout>

    </LinearLayout>

  </androidx.cardview.widget.CardView>

</RelativeLayout>