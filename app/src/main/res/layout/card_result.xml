<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#FFC26DD6"
            android:fontFamily="@font/roboto"
            android:padding="@dimen/card_banner_padding"
            android:text="Sun 15 Mar"
            android:textAlignment="center"
            android:textColor="@color/text_black"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_content_margin"
            android:layout_weight="4"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/rTeamALogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/logo_padding"
                    app:srcCompat="@mipmap/ic_launcher"
                    tools:textAlignment="center" />

                <TextView
                    android:id="@+id/rTeamAName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="8dp"
                    android:text="Kilkenny"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/rCompetition"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:fontFamily="@font/roboto"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Leinster Hurling League Final"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/rTeamAScore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="#C26DD6"
                        android:fontFamily="@font/roboto_medium"
                        android:padding="8dp"
                        android:text="2-33"
                        android:textAlignment="center"
                        android:textColor="@color/text_black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/rTeamBScore"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="#FFC26DD6"
                        android:fontFamily="@font/roboto_medium"
                        android:padding="8dp"
                        android:text="2-12"
                        android:textAlignment="center"
                        android:textColor="@color/text_black"
                        android:textSize="20sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/rTeamBLogo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/logo_padding"
                    android:textAlignment="center"
                    app:srcCompat="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/rTeamBName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="8dp"
                    android:text="Dublin"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="20sp" />

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>


