<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background = "@drawable/rectangle1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.fixtureFragments.FixtureFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/dcompetition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Leinster Hurling League Final"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFC26DD6"
                android:fontFamily="@font/roboto"
                android:padding="@dimen/card_banner_padding"
                android:text="Sun 15 Mar"
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="18sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_input_margin"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dTeamALogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:srcCompat="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/dTeamBLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_input_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dTeamAName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="8dp"
                    android:text="Kilkenny"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/dTeamBName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="8dp"
                    android:text="Kilkenny"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="20sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/text_input_margin"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/dTeamAScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#C26DD6"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="8dp"
                    android:text="2-33"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="20sp"/>

                <TextView
                    android:id="@+id/dTeamBScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#C26DD6"
                    android:fontFamily="@font/roboto_medium"
                    android:padding="8dp"
                    android:text="2-33"
                    android:textAlignment="center"
                    android:textColor="@color/text_black"
                    android:textSize="20sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/dMatchDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="Excellent match , the ball play was from end to end. great show by all involved . was a great darw gae."
                android:textAlignment="center"
                android:textColor="@color/text_black"
                android:textSize="16sp" />


        </LinearLayout>
    </ScrollView>

</RelativeLayout>