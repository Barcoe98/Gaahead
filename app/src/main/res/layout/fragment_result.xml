<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/teamALogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/teamBLogo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/logoABtn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginLeft="@dimen/two_btn_marginSides"
                    android:layout_marginTop="@dimen/btn_margintopBottom"
                    android:layout_marginRight="@dimen/two_btn_marginSides"
                    android:layout_marginBottom="@dimen/btn_margintopBottom"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rounded"
                    android:text="@string/btn_addTeamALogo"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/logoBBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginLeft="@dimen/two_btn_marginSides"
                    android:layout_marginTop="@dimen/btn_margintopBottom"
                    android:layout_marginRight="@dimen/two_btn_marginSides"
                    android:layout_marginBottom="@dimen/btn_margintopBottom"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rounded"
                    android:text="@string/btn_addTeamBLogo"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <EditText
                    android:id="@+id/teamAName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/input_box_margin"
                    android:layout_weight="1"
                    android:background="@drawable/txt_rounded"
                    android:ems="10"
                    android:hint="@string/hint_teamA"
                    android:inputType="textPersonName"
                    android:padding="@dimen/input_box_padding"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />

                <EditText
                    android:id="@+id/teamBName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/input_box_margin"
                    android:layout_weight="1"
                    android:background="@drawable/txt_rounded"
                    android:ems="10"
                    android:hint="@string/hint_teamB"
                    android:inputType="textPersonName"
                    android:padding="@dimen/input_box_padding"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/teamAScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/input_box_margin"
                    android:layout_weight="1"
                    android:background="@drawable/txt_rounded"
                    android:ems="10"
                    android:hint="@string/hint_teamAScore"
                    android:inputType="textPersonName"
                    android:padding="@dimen/input_box_padding"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />

                <EditText
                    android:id="@+id/teamBScore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/input_box_margin"
                    android:layout_weight="1"
                    android:background="@drawable/txt_rounded"
                    android:ems="10"
                    android:hint="@string/hint_teamBScore"
                    android:inputType="textPersonName"
                    android:padding="@dimen/input_box_padding"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite" />

            </LinearLayout>

            <EditText
                android:id="@+id/competition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:layout_weight="1"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_competition"
                android:inputType="text"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:layout_weight="1"
                android:autofillHints="@string/hint_type"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_date"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />

            <Button
                android:id="@+id/addResultBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="@dimen/btn_marginSides"
                android:layout_marginTop="@dimen/btn_margintopBottom"
                android:layout_marginRight="@dimen/btn_marginSides"
                android:layout_marginBottom="@dimen/btn_margintopBottom"
                android:background="@drawable/btn_rounded"
                android:text="@string/btn_addResult"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>