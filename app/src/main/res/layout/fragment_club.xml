<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".fragments.fixtureFragments.FixtureFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/clubFavImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right"
                app:srcCompat="@android:drawable/star_big_off" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/logoBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginLeft="@dimen/btn_marginSides"
                    android:layout_marginTop="@dimen/btn_margintopBottom"
                    android:layout_marginRight="@dimen/btn_marginSides"
                    android:layout_marginBottom="@dimen/btn_margintopBottom"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rounded"
                    android:text="@string/btn_addLogoBtn"
                    android:textColor="@color/colorWhite" />


            </LinearLayout>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_teamName"
                android:inputType="textPersonName"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <EditText
                android:id="@+id/county"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_county"
                android:inputType="textPersonName"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <EditText
                android:id="@+id/colours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:autofillHints="@string/hint_colours"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_colours"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />

            <EditText
                android:id="@+id/yearFounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_year_founded"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />

            <EditText
                android:id="@+id/division"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_division"
                android:inputType="textPersonName"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <EditText
                android:id="@+id/grounds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_grounds"
                android:inputType="textPersonName"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />

            <Button
                android:id="@+id/addClubBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="@dimen/btn_marginSides"
                android:layout_marginTop="@dimen/btn_margintopBottom"
                android:layout_marginRight="@dimen/btn_marginSides"
                android:layout_marginBottom="@dimen/btn_margintopBottom"
                android:background="@drawable/btn_rounded"
                android:text="@string/btn_addClub"
                android:textColor="@color/colorWhite" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>