<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack"
    android:orientation="vertical"
    tools:context=".fragments.FixtureFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logoTeamA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/logoTeamB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/logoABtn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height"
                    android:layout_margin="@dimen/btn_gap"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rounded"
                    android:text="@string/btn_addTeamALogo"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/logoBBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height"
                    android:layout_margin="@dimen/btn_gap"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rounded"
                    android:text="@string/btn_addTeamBLogo"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <EditText
                android:id="@+id/teamAName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/btn_rounded"
                android:ems="10"
                android:hint="@string/hint_teamA"
                android:inputType="textPersonName"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <EditText
                android:id="@+id/teamBName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/btn_rounded"
                android:ems="10"
                android:hint="@string/hint_teamB"
                android:inputType="textPersonName"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <EditText
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:autofillHints="@string/hint_date"
                android:background="@drawable/btn_rounded"
                android:ems="10"
                android:hint="@string/hint_date"
                android:inputType="date"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <EditText
                android:id="@+id/time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/btn_rounded"
                android:ems="10"
                android:hint="@string/hint_time"
                android:inputType="time"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <EditText
                android:id="@+id/location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/btn_rounded"
                android:ems="10"
                android:hint="@string/hint_location"
                android:inputType="textPersonName"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <Button
                android:id="@+id/addFixtureBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="30dp"
                android:background="@drawable/btn_rounded"
                android:text="@string/btn_addFixture"
                android:textColor="@color/colorWhite"
                />

            <Button
                android:id="@+id/addToResultsBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="30dp"
                android:background="@drawable/btn_rounded"
                android:text="@string/btn_addToResults"
                android:visibility="invisible"
                android:textColor="@color/colorWhite"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>