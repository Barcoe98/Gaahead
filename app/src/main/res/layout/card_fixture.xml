<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#009688"
        android:orientation="horizontal">

      <TextView
          android:id="@+id/fDate"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_weight="2"
          android:background="#009688"
          android:fontFamily="@font/roboto_medium"
          android:padding="@dimen/card_banner_padding"
          android:text="Sun 15 Mar"
          android:textAlignment="center"
          android:textColor="@color/text_black"
          android:textSize="18sp" />

      <ImageView
          android:id="@+id/imagefavouriteStar"
          android:layout_width="30dp"
          android:layout_height="30dp"
          android:layout_gravity="right"
          app:srcCompat="@drawable/ic_bookmark_border_black_24dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_content_margin"
        android:orientation="horizontal">

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:orientation="vertical">

        <ImageView
            android:id="@+id/fTeamALogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/logo_padding"
            app:srcCompat="@mipmap/ic_launcher"
            tools:textAlignment="center" />

        <TextView
            android:id="@+id/fTeamAName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:padding="@dimen/logo_padding"
            android:text="Kilkenny"
            android:textAlignment="center"
            android:textColor="@color/text_black"
            android:textSize="18sp" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:orientation="vertical">

        <TextView
            android:id="@+id/fLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:padding="10dp"
            android:text="Tom Walsh Park"
            android:textAlignment="center"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/fTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="#009688"
            android:fontFamily="@font/roboto_medium"
            android:padding="10dp"
            android:text="11:00"
            android:textAlignment="center"
            android:textColor="@color/text_black"
            android:textSize="18sp" />

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="2"
          android:orientation="vertical">

        <ImageView
            android:id="@+id/fTeamBLogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/logo_padding"
            android:textAlignment="center"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/fTeamBName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/roboto_medium"
            android:padding="@dimen/logo_padding"
            android:text="Dublin"
            android:textAlignment="center"
            android:textColor="@color/text_black"
            android:textSize="18sp" />

      </LinearLayout>

    </LinearLayout>

  </LinearLayout>

</androidx.cardview.widget.CardView>