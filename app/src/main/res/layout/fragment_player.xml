<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/layout_margin"
            android:layout_height="wrap_content"

            android:orientation="vertical">

            <ImageView
                android:id="@+id/playerImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:src="@tools:sample/avatars" />

            <Button
                android:id="@+id/addPlayerImage"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="@dimen/btn_marginSides"
                android:layout_marginTop="@dimen/btn_margintopBottom"
                android:layout_marginRight="@dimen/btn_marginSides"
                android:layout_marginBottom="@dimen/btn_margintopBottom"
                android:layout_weight="1"
                android:background="@drawable/btn_rounded"
                android:text="@string/btn_addPlayerImage"
                android:textColor="@color/colorWhite" />

            <EditText
                android:id="@+id/playerName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/hint_playerName"
                android:inputType="textPersonName"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <EditText
                android:id="@+id/playerAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/hint_playerAge"
                android:inputType="number"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/playerHeight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/hint_playerHeight"
                    android:inputType="numberDecimal"
                    android:layout_margin="@dimen/input_box_margin"
                    android:background="@drawable/txt_rounded"
                    android:padding="@dimen/input_box_padding"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"/>

                <EditText
                    android:id="@+id/playerWeight"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="@string/hint_playerWeight"
                    android:inputType="numberDecimal"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/input_box_margin"
                    android:background="@drawable/txt_rounded"
                    android:padding="@dimen/input_box_padding"
                    android:textColor="@color/colorWhite"
                    android:textColorHint="@color/colorWhite"/>

            </LinearLayout>

            <EditText
                android:id="@+id/playerPosition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="@string/hint_playerPosition"
                android:inputType="textPersonName"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <Button
                android:id="@+id/addPlayerBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="@dimen/btn_marginSides"
                android:layout_marginTop="@dimen/btn_margintopBottom"
                android:layout_marginRight="@dimen/btn_marginSides"
                android:layout_marginBottom="@dimen/btn_margintopBottom"
                android:layout_weight="1"
                android:background="@drawable/btn_rounded"
                android:text="@string/btn_player"
                android:textColor="@color/colorWhite" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>