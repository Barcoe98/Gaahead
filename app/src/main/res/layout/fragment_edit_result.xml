<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_margin"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/editTeamALogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher" />

            <ImageView
                android:id="@+id/editTeamBLogo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@mipmap/ic_launcher" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/editLogoABtn"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="@string/btn_addTeamALogo"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="@dimen/btn_gap"
                android:background="@drawable/btn_rounded"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/editLogoBBtn"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="@dimen/btn_gap"
                android:background="@drawable/btn_rounded"
                android:textColor="@color/colorWhite"
                android:text="@string/btn_addTeamBLogo" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/editTeamAName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/hint_teamA"
                android:inputType="textPersonName"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/btn_rounded"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <EditText
                android:id="@+id/ediitTeamBName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/hint_teamB"
                android:inputType="textPersonName"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/btn_rounded"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTeamAScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/hint_teamBScore"
                android:inputType="textPersonName"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/btn_rounded"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <EditText
                android:id="@+id/editTeamBScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="@string/hint_teamBScore"
                android:inputType="textPersonName"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/btn_rounded"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

        </LinearLayout>

        <EditText
            android:id="@+id/editCompetition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:autofillHints="@string/hint_type"
            android:ems="10"
            android:hint="@string/hint_type"
            android:inputType="text"
            android:layout_margin="@dimen/input_box_margin"
            android:background="@drawable/btn_rounded"
            android:padding="@dimen/input_box_padding"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite"/>

        <EditText
            android:id="@+id/editRDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/input_box_margin"
            android:layout_weight="1"
            android:autofillHints="@string/hint_type"
            android:background="@drawable/btn_rounded"
            android:ems="10"
            android:hint="@string/hint_date"
            android:padding="@dimen/input_box_padding"
            android:textColor="@color/colorWhite"
            android:textColorHint="@color/colorWhite" />

        <Button
            android:id="@+id/editResultBtn"
            android:layout_width="match_parent"
            android:text="@string/btn_addResult"
            android:layout_height="@dimen/btn_height"
            android:layout_margin="30dp"
            android:background="@drawable/btn_rounded"
            android:textColor="@color/colorWhite"/>

    </LinearLayout>

    </ScrollView>

</RelativeLayout>