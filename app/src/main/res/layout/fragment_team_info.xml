<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".fragments.fixtureFragments.FixtureFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/profilePic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/profilePicBtn"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginLeft="@dimen/btn_marginSides"
                    android:layout_marginTop="@dimen/btn_margintopBottom"
                    android:layout_marginRight="@dimen/btn_marginSides"
                    android:layout_marginBottom="@dimen/btn_margintopBottom"
                    android:background="@drawable/btn_rounded"
                    android:text="@string/btn_addProfilePic"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_name"
                android:inputType="textPersonName"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <EditText
                android:id="@+id/Age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_age"
                android:inputType="textPersonName"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <EditText
                android:id="@+id/placeOfBirth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:autofillHints="@string/hint_date"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_placeOfBirth"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />

            <EditText
                android:id="@+id/trophiesWon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_trophiesWon"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />

            <EditText
                android:id="@+id/background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_background"
                android:inputType="textPersonName"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite"/>

            <Button
                android:id="@+id/addManagerInfoBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:text="@string/btn_addManagerInfo"
                android:layout_marginLeft="@dimen/btn_marginSides"
                android:layout_marginTop="@dimen/btn_margintopBottom"
                android:layout_marginRight="@dimen/btn_marginSides"
                android:layout_marginBottom="@dimen/btn_margintopBottom"
                android:background="@drawable/btn_rounded"
                android:textColor="@color/colorWhite"
                />

        </LinearLayout>
    </ScrollView>

</LinearLayout>