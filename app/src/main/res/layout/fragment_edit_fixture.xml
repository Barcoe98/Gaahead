<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".fragments.fixtureFragments.FixtureFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/editLogoTeamA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />

                <ImageView
                    android:id="@+id/editLogoTeamB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@mipmap/ic_launcher" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/editLogoABtn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginLeft="@dimen/two_btn_marginSides"
                    android:layout_marginTop="@dimen/btn_margintopBottom"
                    android:layout_marginRight="@dimen/two_btn_marginSides"
                    android:layout_marginBottom="@dimen/btn_margintopBottom"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rounded"
                    android:text="@string/btn_addTeamALogo"
                    android:textColor="@color/colorWhite" />

                <Button
                    android:id="@+id/logoBBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/btn_height"
                    android:layout_marginLeft="@dimen/two_btn_marginSides"
                    android:layout_marginTop="@dimen/btn_margintopBottom"
                    android:layout_marginRight="@dimen/two_btn_marginSides"
                    android:layout_marginBottom="@dimen/btn_margintopBottom"
                    android:layout_weight="1"
                    android:background="@drawable/btn_rounded"
                    android:text="@string/btn_addTeamBLogo"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

            <EditText
                android:id="@+id/editTeamAName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_teamA"
                android:inputType="textPersonName"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />

            <EditText
                android:id="@+id/editTeamBName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_teamB"
                android:inputType="textPersonName"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />

            <EditText
                android:id="@+id/editDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:autofillHints="@string/hint_date"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_date"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />

            <EditText
                android:id="@+id/editTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_time"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />

            <EditText
                android:id="@+id/editLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/input_box_margin"
                android:background="@drawable/txt_rounded"
                android:ems="10"
                android:hint="@string/hint_location"
                android:inputType="textPersonName"
                android:padding="@dimen/input_box_padding"
                android:textColor="@color/colorWhite"
                android:textColorHint="@color/colorWhite" />

            <Button
                android:id="@+id/editFixtureBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="@dimen/btn_marginSides"
                android:layout_marginTop="@dimen/btn_margintopBottom"
                android:layout_marginRight="@dimen/btn_marginSides"
                android:layout_marginBottom="@dimen/btn_margintopBottom"
                android:background="@drawable/btn_rounded"
                android:text="@string/btn_editFixture"
                android:textColor="@color/colorWhite" />

            <Button
                android:id="@+id/editToResultsBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_marginLeft="@dimen/two_btn_marginSides"
                android:layout_marginTop="@dimen/btn_margintopBottom"
                android:layout_marginRight="@dimen/two_btn_marginSides"
                android:layout_marginBottom="@dimen/btn_margintopBottom"
                android:background="@drawable/btn_rounded"
                android:text="@string/btn_editToResults"
                android:textColor="@color/colorWhite"
                android:visibility="visible" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>